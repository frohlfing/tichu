# Konfiguration f端r Code Coverage

[run]
# Coverage-Datei (SQLite)
data_file = cov/.coverage

# Verzeichnisse und Dateien, die getestet werden sollen
source =
    src
#    main.py

# Verzeichnisse und Dateien, die nicht getestet werden sollen
omit =
    _*

[report]
# Zeilennummern der nicht abgedeckten Zeilen anzeigen
show_missing = True

# Dateien ohne Code 端berspringen
skip_empty = True

[html]
# Ausgabeverzeichnis f端r HTML-Report
directory = cov/htmlcov

[xml]
# Ausgabeverzeichnis f端r HTML-Report
output = cov/coverage.xml
